<!-- The add Article Modal -->
<div class="modal" id="addArticleModal">
        <div class="modal-dialog">
            <div class="modal-content">
    
                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">ثبت مقاله جدید</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
    
                <!-- Modal body -->
                <div class="modal-body">
                    <form action="/article/add" method="POST">
                        <div class="form-group">
                            <label for="title">عنوان مقاله</label>
                            <input type="text" name="title" class="form-control">
                        </div>
                        <!-- <div class="form-group">
                            <label for="author">نام نویسنده</label>
                            <input type="text" name="author" class="form-control" value="<%=user.firstName%> <%=user.lastName%>">
                        </div> -->
                        <div class="form-group">
                            <label for="articleBody">متن مقاله</label>
                            <textarea name="articleBody" class="form-control" cols="30" rows="10"></textarea>
                        </div>
                        <input type="submit" class="btn btn-primary" value="ثبت مقاله">
                    </form>
                </div>
            </div>
        </div>
    </div>